<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item  >
        <shape>
            <!-- 描边 -->
            <stroke
                android:width="2dp"
                android:color="#fff"
                 />
            <!-- 圆角 -->
            <corners
                android:radius="10dp"
                />
