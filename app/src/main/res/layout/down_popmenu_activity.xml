<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/poprelative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/pop_comment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_popmenu_top"
            android:text="评论"
            android:textColor="@color/blueviolet" />

        <Button
            android:id="@+id/pop_report"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_popmenu_bttom"
            android:text="举报"
            android:textColor="@color/blueviolet" />

        <Button
            android:id="@+id/pop_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_popmenu"
            android:text="取消"
            android:textColor="@color/blueviolet" />
    </LinearLayout>
</RelativeLayout>