<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/select_userphoto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/relativeLayout2"
        android:layout_marginTop="20dp"
        android:src="@mipmap/p2" />

    <!--</ListView>-->
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="62dp">

        <ImageView
            android:id="@+id/select_book"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/p2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/select_book"
            android:text="芝士书摘"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/select_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/select_title"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/p1" />

        <TextView
            android:id="@+id/select_contant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_title"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/select_book"
            android:text="岛国的思维"
            android:textSize="12dp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/select_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_userphoto"
        android:layout_alignTop="@+id/select_userphoto"
        android:layout_toEndOf="@+id/select_userphoto"
        android:gravity="center_vertical"
        android:text="兰初" />

    <TextView
        android:id="@+id/select_sorce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_username"
        android:layout_alignTop="@+id/select_username"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/select_username"
        android:gravity="center_vertical"
        android:text="芝士书摘" />

    <TextView
        android:id="@+id/select_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_sorce"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/select_sorce"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:text="14小时前" />

    <TextView
        android:id="@+id/select_contant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="15dp"
        android:text="小知识分子的心灵鸡汤"
        android:textSize="12dp" />

    <CheckBox
        android:id="@+id/select_zan"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        android:focusable="false"
        android:layout_toStartOf="@+id/select_talk"
        android:background="@drawable/selector_zan"
        android:button="@null" />

    <ImageView
        android:id="@+id/select_talk"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/select_time"
        android:layout_alignTop="@+id/select_zan"
        android:src="@mipmap/hot_card_comment_icon" />

    <TextView
        android:id="@+id/select_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_talk"
        android:layout_alignTop="@+id/select_talk"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/select_talk"
        android:gravity="center"
        android:text="7" />

    <TextView
        android:id="@+id/select_zannums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_zan"
        android:layout_alignTop="@+id/select_zan"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/select_talk"
        android:gravity="center"
        android:text="14" />

</RelativeLayout>